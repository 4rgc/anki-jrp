.jrp-unit.jrp-{pattern}-2 > span {{
	text-shadow:  1px  1px 0 var(--jrp-{pattern}),
	             -1px  1px 0 var(--jrp-{pattern}),
	              1px -1px 0 var(--jrp-{pattern}),
	             -1px -1px 0 var(--jrp-{pattern});
}}

.jrp-unit.jrp-{pattern}-3 > span {{
	background-color: var(--jrp-{pattern});
	border-radius: 0.2em;
}}
